{
  "name": "havit-web-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass": "^4.7.2",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "redux": "^3.7.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/styles/ -o src/styles/css",
    "watch-css": "yarn run build-css --watch --recursive",
    "start-js": "cross-env NODE_PATH=src react-scripts start",
    "start-node": "nodemon server/main.js",
    "start": "npm-run-all -p watch-css start-js start-node",
    "build": "cross-env NODE_PATH=src react-scripts build",
    "test": "cross-env NODE_PATH=src react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "proxy": "http://localhost:5000"
}
