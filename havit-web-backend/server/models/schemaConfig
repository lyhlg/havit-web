const userSchema = new Schema({
  specId: Number,
  username: String,
  user_id_email: { type: String, required: true, unique: true, lowercase: true },
  password: String,
  createdOn: { type: Date, default: Date.now },
  name: String,
  auth:String,
  phone: Number,
  birthday: Number,
  gender: String,
  likeArea: Array,
  likePoint: Array,
  hospitalCode: String,
  likeProduct: [{
    title: String,
    description: String,
    price: Number,
    hospital: String,
    region: String,
    numOfPurchases: Number,
    thumbnail: String,
    review : [{
      name: String,
      star: Number,
      comment:String
    }]
  }]
})
